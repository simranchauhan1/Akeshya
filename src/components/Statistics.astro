<!-- src/components/Statistics.astro -->

---
const stats = [
    { title: 'Organic Reach (Global)', count: '3,835,039', description: 'Organic Reach' },
    { title: 'Campaigns', count: '85', description: 'Successful campaigns' },
    { title: 'Watch Hours (Asia)', count: '14,081', description: 'Total watch hours in Asia' },
    { title: 'Excellent CTR % (Asia)', count: '17%', description: 'Click-through rate in Asia' }
];
---

<section class="statistics-section">
    <div class="container">
        <div class="image-container">
            <img src="./public/images/counts-img.svg" alt="Statistics Image" />
        </div>
        <div class="stats-container">
            {stats.map(stat => (
                <div class="stat-box">
                    <h3>{stat.count}</h3>
                    <p class="title">{stat.title}</p>
                    <p class="description">{stat.description}</p>
                </div>
            ))}
        </div>
    </div>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600&display=swap');

        .statistics-section {
            background-color: #f9f9f9;
            text-align: center;
        }

        .container {
            display: flex;
            max-width: 1200px; /* Set the maximum width for the container */
            margin: 0 auto; /* Center the container */
            justify-content: center;
            align-items: center;
            box-sizing: border-box;
        }

        .image-container, .stats-container {
            flex: 1;
            padding: 10px;
            box-sizing: border-box;
        }

        .image-container {
            text-align: center;
        }

        .image-container img {
            max-width: 90%;
            height: auto;
            border-radius: 10px;
        }

        .stats-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-around;
            align-items: flex-start;
            gap: 20px;
        }

        .stat-box {
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            padding: 20px;
            flex: 1 1 calc(25% - 20px); /* Responsive layout with gap */
            min-width: 200px; /* Ensure minimum width */
            text-align: center;
        }

        .stat-box h3 {
            font-size: 2rem;
            color: #0e0d0d;
            margin: 0;
            font-family: 'Raleway', sans-serif;
        }

        .stat-box p.title {
            font-size: 1rem;
            color: #666;
            margin: 10px 0 0;
            font-family: 'Open Sans', sans-serif;
        }

        .stat-box p.description {
            font-size: 0.875rem;
            color: #999;
            margin-top: 5px;
            font-family: 'Open Sans', sans-serif;
        }
    </style>
</section>
