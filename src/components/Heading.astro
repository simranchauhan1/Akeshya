---
export function HeadingWithLines({ headingText }) {
  return (
    <div class="heading-with-lines">
      <div class="line"></div>
      <h1 class="heading">{headingText}</h1>
      <div class="line"></div>
    </div>
  );
}
---

<style>
  .heading-with-lines {
    display: flex;
    align-items: center;
    margin: 0 auto;
    max-width: 800px; /* Adjust as needed */
    position: relative;
  }

  .line {
    flex-grow: 1;
    height: 2px;
    background-color: #000; /* Adjust color as needed */
  }

  .heading {
    margin: 0 20px; /* Adjust spacing between lines and heading */
    font-size: 2rem; /* Adjust font size as needed */
    color: #333; /* Adjust heading color */
    font-family: Arial, sans-serif; /* Adjust font family */
  }
</style>
