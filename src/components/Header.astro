---
// src/components/Header.astro

const logoSrc = "../public/images/logo.png"; // Update this path with your actual logo path
---

<header class="header">
  <div class="header-left">
    <img src={logoSrc} alt="Logo" class="logo" />
    <span class="brand-name">AKESHYA</span>
  </div>
  <nav class="header-right">
    <a href="/" class="nav-link">Home</a>
    <a href="/about" class="nav-link">About</a>
    <a href="/services" class="nav-link">Services</a>
    <a href="/contact" class="nav-link">Contact Us</a>
  </nav>
</header>

<!--CSS Styling -->
<style>

     /* Import Google Fonts */
  @import url('https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600&display=swap');

/* Apply the font to the entire body */
body {
  font-family: 'Open Sans', sans-serif;
}

  .header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.75rem 1rem; /* Reduce padding */
    background-color: #f8f9fa;
    height: 60px;
  }

  .header-left {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-left: 4rem; /* Move the brand name and logo to the right */
  }

  .logo {
    height: 80px; /* Reduce logo height */
    margin-right: 0.5rem;
  }

  .brand-name {
    font-size: 2rem; /* Reduce font size */
    font-weight: bold;
    color: #14279b;
    font-family: "Open Sans", sans-serif;
  }

  .header-right {
    display: flex;
    gap: 1rem; /* Reduce gap between links */
    margin-right: 5rem;
  }

  .nav-link {
    text-decoration: none;
    color: #444444;;
    font-weight: 500;
    transition: color 0.3s ease;
    font-size: 1rem; /* Reduce font size */
    padding: 0.25rem 0.5rem; /* Reduce padding */
  }

  .nav-link:hover {
    color:  #14279b;;
  }
</style>
