---
const title = 'Grow your business with Akeshya';
const subtitle = 'We are team of talented website designers and developers & digital marketeers.';
const clients = [
    { src: '../public/images/client-1.png', alt: 'Client 1' },
    { src: '../public/images/client-2.png', alt: 'Client 2' },
    { src: '../public/images/client-3.png', alt: 'Client 3' },
    { src: '../public/images/client-4.png', alt: 'Client 4' },
    { src: '../public/images/client-5.png', alt: 'Client 5' },
    { src: '../public/images/client-6.png', alt: 'Client 6' }
];

---
<section class="hero-section">
    <div class="hero-container">
        <div class="text-content">
            <h1>{title}</h1>
            <p>{subtitle}</p>
            <button class="start-button">Get Started</button>
        </div>
        <div class="image-content">
            <img class="animated-image" src="./public/images/hero-img.png" alt="Animated Image">
        </div>
    </div>
    <div class="client-section">
        <div class="client-logos">
            {clients.map(client => (
                <img src={client.src} alt={client.alt} class="client-logo" />
            ))}
        </div>
    </div>
    <style>

    @import url('https://fonts.googleapis.com/css2?family=Raleway:wght@400;700&display=swap');

        .hero-section{
            background: white;
            width: 100%;
            height: 70vh;
        }
        .hero-container {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 20px;
            background-color: #ffffff;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            overflow: hidden;
        }
        
        .text-content {
            flex: 1;
            padding-right: 20px;
            margin-left: 7rem;
        }
        
        .text-content h1 {
            font-size: 3rem;
            margin-bottom: 10px;
            color: rgb(20, 39, 155);
            font-family: Raleway, sans-serif;
        }
        
        .text-content p {
            font-size: 1.60rem;
            line-height: 1.2;
            color: rgb(72, 72, 72);
        }
        
        .start-button {
            display: inline-block;
            padding: 10px 20px;
            background-color: #f3f5f8;
            color: #162be8;
            font-size: 1.25rem;
            border: 1px solid #162be8; 
            cursor: pointer;
            border-radius: 20px;
            transition: background-color 0.3s ease;
        }
        
        .start-button:hover {
            background-color: #1b18dc;
            color: #f3f5f8 ;
        }
        
        .image-content {
            flex: 1;
            text-align: center;
            position: relative;
        }
        
        .animated-image {
            margin-right: 7rem;
            max-width: 100%;
            height: auto;
            display: block;
            animation: float 3s ease-in-out infinite;
        }

        .client-section{
            margin-left: 9rem;
            margin-right: 9rem;
            background-color: rgb(243, 249, 253)
        }

        .client-logos {
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 0 20px;
            justify-content: space-between;
            font-size: 1rem;
            font-weight: 400;
            line-height: 1.5;
        }
        .client-logo {
            max-width: 100px;
            height: auto;
            filter: grayscale(100%); /* Make the image black and white */
            transition: filter 0.3s ease; /* Smooth transition */
        }
        .client-logo:hover {
            filter: grayscale(0%); /* Restore original color on hover */
        }
            
        @keyframes float {
            0%, 100% {
                transform: translatey(0);
            }
            50% {
                transform: translatey(-10px);
            }

            .client-section {
            text-align: center;
            padding: 20px;
            margin-top: 20px;
            }
        
        } 
    </style>
</section>
