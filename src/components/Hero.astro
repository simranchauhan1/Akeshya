---
const title = 'Grow your business with Akeshya';
const subtitle = 'We are team of talented website designers and developers & digital marketeers.';
const clients = [
    { src: '../public/images/client-1.png', alt: 'Client 1' },
    { src: '../public/images/client-2.png', alt: 'Client 2' },
    { src: '../public/images/client-3.png', alt: 'Client 3' },
    { src: '../public/images/client-4.png', alt: 'Client 4' },
    { src: '../public/images/client-5.png', alt: 'Client 5' },
    { src: '../public/images/client-6.png', alt: 'Client 6' }
];
---

<section class="hero-section">
    <div class="hero-container">
        <div class="text-content">
            <h1 class="animate-heading">{title}</h1>
            <p class="animate-paragraph">{subtitle}</p>
            <button class="start-button animate-button">Get Started</button>
        </div>

        <div class="image-content">
            <img class="animated-image" src="../public/images/hero-img.png" alt="Animated Image">
        </div>  
    </div>
    <div class="client-section">
        <div class="client-logos">
            {clients.map(client => (
                <img src={client.src} alt={client.alt} class="client-logo animate-logo" />
            ))}
        </div>
    </div>
    <style>
    @import url('https://fonts.googleapis.com/css2?family=Raleway:wght@400;700&display=swap');

    .hero-section {
        background: white;
        width: 100%;
    }

    .hero-container {
        display: flex;
        height: 70vh;
        align-items: center;
        padding: 20px;
        background-color: #ffffff;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        overflow: hidden;
    }

    .text-content {
        text-align: left;
        padding: 20px;
        margin-left: 7rem;
    }

    .text-content h1 {
        font-size: 3rem;
        margin-bottom: 10px;
        color: rgb(20, 39, 155);
        font-family: Raleway, sans-serif;
        opacity: 0; 
    }

    .text-content p {
        font-size: 1.2rem;
        line-height: 1.2;
        color: rgb(72, 72, 72);
        opacity: 0; 
    }

    .start-button {
        display: inline-block;
        padding: 10px 20px;
        background-color: #f3f5f8;
        color: #162be8;
        font-size: 1rem;
        border: 2px solid #162be8;
        cursor: pointer;
        border-radius: 50px;
        transition: background-color 0.3s ease;
        opacity: 0; 
    }

    .start-button:hover {
        background-color: #1b18dc;
        color: #f3f5f8;
    }

    .image-content {
        text-align: center;
        margin-bottom: 20px;
        margin-right: 7rem;
    }

    .animated-image {
        max-width: 100%;
        height: auto;
        display: block;
        animation: floatUpDown 3s ease-in-out 1s infinite;
        opacity: 0; /* Start with invisible */
    }

    .client-section {
        padding: 20px 0;
        background-color: rgb(243, 249, 253);
    }

    .client-logos {
        display: flex;
        justify-content: center;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 20px;
        font-size: 1rem;
        font-weight: 400;
        line-height: 1.5;
        margin: 0 auto;
        max-width: 80%;
    }

    .client-logo {
        max-width: 100px;
        height: auto;
        filter: grayscale(100%);
        transition: filter 0.3s ease;
        opacity: 0; /* Start with invisible */
        transform: scale(0.5); /* Start with smaller size */
    }

    .client-logo:hover {
        filter: grayscale(0%);
    }

    @keyframes slideInRight {
        0% {
            transform: translateX(100%);
            opacity: 0;
        }
        100% {
            transform: translateX(0);
            opacity: 1;
        }
    }

    @keyframes slideInBottom {
        0% {
            transform: translateY(100%);
            opacity: 0;
        }
        100% {
            transform: translateY(0);
            opacity: 1;
        }
    }

    @keyframes floatUpDown {
        0% {
            transform: translateY(0);
        }
        50% {
            transform: translateY(-10px);
        }
        100% {
            transform: translateY(0);
        }
    }

    @keyframes popUp {
        0% {
            transform: scale(0.5);
            opacity: 0;
        }
        100% {
            transform: scale(1);
            opacity: 1;
        }
    }

    /* Apply animations */
    .animate-heading {
        animation: slideInBottom 1s ease-out forwards;
    }

    .animate-paragraph {
        animation: slideInBottom 1s ease-out forwards;
    }

    .animate-button {
        animation: slideInBottom 1s ease-out forwards;
    }

    .animated-image {
        animation-delay: 0.5s;
    }

    .animate-logo {
        animation: popUp 0.5s ease-out forwards;
    }

    @media (max-width: 767px) {
    .hero-container {
        flex-direction: column-reverse; /* Vertical layout for smaller screens */
        height: auto;
    }

    .text-content {
        margin-left: 0;
    }

    .text-content h1 {
        font-size: 2rem;
    }

    .text-content p {
        font-size: 1rem;
    }
}

    </style>
</section>



<script>
    document.addEventListener('DOMContentLoaded', () => {
        const elementsToAnimate = document.querySelectorAll('.animate-heading, .animate-paragraph, .animate-button, .animated-image, .client-logo');
        
        const observer = new IntersectionObserver(entries => {
            entries.forEach(entry => {
                const element = entry.target as HTMLElement;
                if (entry.isIntersecting) {
                    element.style.opacity = '1';
                    element.style.animationPlayState = 'running';
                } else {
                    element.style.opacity = '0';
                    element.style.animationPlayState = 'paused';
                }
            });
        }, { threshold: 0.1 });

        elementsToAnimate.forEach(element => {
            const el = element as HTMLElement;
            el.style.opacity = '0';
            el.style.animationPlayState = 'paused';
            observer.observe(el);
        });
    });
</script>
