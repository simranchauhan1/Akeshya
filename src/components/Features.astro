---
import { FontAwesomeIcon } from '@fortawesome/react-fontawesome';
import { faLaptopCode, faCode, faBullhorn, faTv, faSearch, faLightbulb, faMapMarkerAlt, faChartLine, faAddressBook, faPhotoVideo, faCalendarAlt, faRedo } from '@fortawesome/free-solid-svg-icons';


const features = [
  { title: 'Web design', icon: faLaptopCode, colour: "#ffbb2c"},
  { title: 'Development', icon: faCode, colour:"#ffbb2c"},
  { title: 'Branding', icon: faBullhorn, colour:"#e80368" },
  { title: 'Media buying', icon: faTv, colour: "#3e361ff" },
  { title: 'Search engine', icon: faSearch, colour: "#47aeff" },
  { title: 'Brand strategy', icon: faLightbulb, colour:"#ffa76e" },
  { title: 'Local search marketing', icon: faMapMarkerAlt, colour:"#dbce11" },
  { title: 'Lead Tracking & Management', icon: faChartLine, colour:"#4233ff" },
  { title: 'Contact management', icon: faAddressBook, colour:"#b2904f" },
  { title: 'Media management', icon: faPhotoVideo, colour:"#b20969" },
  { title: 'Social scheduling', icon: faCalendarAlt, colour:"#ff5828" },
  { title: 'Ad retargeting', icon: faRedo, colour:"#29cc61" }
];
---

<section class="features-section">
  <h2 class="animate-heading">OUR CORE FEATURES</h2>
  <p class="animate-paragraph" id="para">Akeshya is a forward-thinking and intelligent design firm that is technically and creatively capable of transforming your brand into its best digital self. Our approach to design and development results in compelling, engaging branding and immersive digital experiences that provide a value for money.</p>
  <div class="features-grid">
    {features.map((feature, index) => (
      <div class={`feature-box animate-box animate-delay-${index}`} >
        <FontAwesomeIcon icon={feature.icon} className="feature-icon" style={{ color: feature.colour }} />
        <div class="feature-title">{feature.title}</div>
      </div>
    ))}
  </div>
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Raleway:wght@400;700&display=swap');


    #para{
      font-size: 1.1rem;
      margin-left: 3rem;
      margin-right: 3rem;
    }

    .features-section {
      text-align: center;
      padding: 40px 20px;
      background-color: #f9f9f9;
    }

    .features-section h2 {
      font-size: 2.5rem;
      margin-bottom: 20px;
      color: #1430a0;
      font-family: Raleway, sans-serif;
    }

    .features-section p {
      font-size: 1.2rem;
      color: #666666;
      margin-bottom: 40px;
      font-family: Raleway, sans-serif;
    }

    .features-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 1rem;
      margin: 0 auto;
      max-width: 80%;
    }

    .feature-box {
      display: flex;
      align-items: center;
      justify-content: left;
      justify-items: left;
      background-color: #ffffff;
      padding: 20px;
      border-radius: 8px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      transition: transform 0.3s ease, box-shadow 0.3s ease;
      text-align: left;
      opacity: 0; /* Start with invisible */
    }

    .feature-icon {
      font-size: 1.5rem;
      color: #0d0f15;
      margin-right: 10px;
      height: 2rem;
    }

    .feature-box h3 {
      font-size: 1.5rem;
      color: #333;
      margin: 10px 0 0;
      font-family: Raleway, sans-serif;
      transition: color 0.3s ease; /* Add transition for color change */
    }

    .feature-box:hover {
      transform: translateY(-5px);
      box-shadow: 0 0 15px rgba(0, 0, 0, 0.2);
    }

    .feature-box:hover h3 {
      color: #1430a0; /* Change text color on hover */
    }

    .feature-title {
      font-size: 1rem;
      font-weight: 700;
    }


    @keyframes slideInBottom {
      0% {
        transform: translateY(100%);
        opacity: 0;
      }
      100% {
        transform: translateY(0);
        opacity: 1;
      }
    }

    .animate-heading,
    .animate-paragraph,
    .animate-box {
      animation: slideInBottom 1s ease-out forwards;
    }

    .animate-heading {
      animation-delay: 0.2s;
    }

    .animate-paragraph {
      animation-delay: 0.4s;
    }

    .animate-box {
      animation-delay: 0.6s;
    }

    .animate-delay-0 {
      animation-delay: 0.2s;
    }

    .animate-delay-1 {
      animation-delay: 0.4s;
    }

    .animate-delay-2 {
      animation-delay: 0.6s;
    }

    .animate-delay-3 {
      animation-delay: 0.8s;
    }

    .animate-delay-4 {
      animation-delay: 1s;
    }

    .animate-delay-5 {
      animation-delay: 1.2s;
    }

    .animate-delay-6 {
      animation-delay: 1.4s;
    }

    .animate-delay-7 {
      animation-delay: 1.6s;
    }

    .animate-delay-8 {
      animation-delay: 1.8s;
    }

    .animate-delay-9 {
      animation-delay: 2s;
    }

    .animate-delay-10 {
      animation-delay: 2.2s;
    }

    .animate-delay-11 {
      animation-delay: 2.4s;
    }
  </style>
</section>
